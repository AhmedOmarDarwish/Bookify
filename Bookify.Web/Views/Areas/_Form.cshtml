@model AreaFormViewModel

<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModalComplete">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="Name" />
            <label asp-for="Name"></label>
        </div>
        <span asp-validation-for="Name" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <select class="form-select js-select2" data-placeholder="Select An Governorate" asp-for="GovernorateId" asp-items="@Model.Governorates">
                <option value="">Select An Governorate</option>
            </select>
            <label asp-for="GovernorateId"></label>
        </div>
        <span asp-validation-for="GovernorateId" class="text-danger d-block"></span>
    </div>

    <partial name="_ModalFooter" />
</form>